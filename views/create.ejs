        <h1>Create Virtual Christmas account
        </h1>
        <form id="create">
    <label for="uname">Username:</label>
    <input type="text" id="uname">
    <br>
    <label for="pword">Password:</label>
    <input type="password" id="pword">
    <br>
    <button id="signup" onclick="create()" class="btn btn-primary">Create account</button>
<form>
    <script>
                  var signupbtn = document.getElementById("signup")
                  $("#create").submit(create)
        function create(e) {
        //e.preventDefault()
            var uname = document.getElementById("uname").value
            var pword = document.getElementById("pword").value
          signupbtn.disabled = true
          signupbtn.innerHTML = "Creating acc..."
        $.ajax({
            url: "/api/newacc",
            method: "POST",
            data: {
                uname: uname,
                pword: pword
            },
            dataType: "JSON",
            success: function(data) {
               if(data.success) {
                setCookie("session", true, 30)   
                setCookie("uname", data.name, 30)   
                setCookie("authorization", data.authorization, 30)   
                window.location.href = "/"
               } else{
                signupbtn.disabled = false
          signupbtn.innerHTML = "Create Account"
                   //handle error
                   alert(data.errormsg)
               }
            },
            error: function() {
              signupbtn.disabled = false
          signupbtn.innerHTML = "Create Account"
                alert("Unexpected Error: Couldn't connect to server")
            }
        });
        }

        function setCookie(cname, cvalue, exdays) {
  var d = new Date();
  d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
  var expires = "expires="+d.toUTCString();
  document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
}

    </script>
